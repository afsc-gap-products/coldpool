Package: coldpool
Type: Package
Title: AFSC/RACE Groundfish Assessment Program oceanographic data products
Version: 3.5-1
Date: 2025-08-01
Authors@R: c(person("Sean", "Rohan", email = "sean.rohan@noaa.gov", role = c("aut", "cre")),
    person("Lewis", "Barnett", email = "lewis.barnett@noaa.gov", role = "aut"),
    person("Kelly", "Kearney", role = "ctb"),
    person("Emily", "Markowitz", role = "ctb"))
Maintainer: Sean Rohan <sean.rohan@noaa.gov>
Depends: R (>= 4.0),
    ggthemes,
    ggplot2,
